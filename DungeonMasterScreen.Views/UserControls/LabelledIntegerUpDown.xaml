<UserControl x:Class="DungeonMasterScreen.Views.UserControls.LabelledIntegerUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DungeonMasterScreen.Views.UserControls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d">
    <Grid x:Name="Root">
        <xctk:IntegerUpDown Name="IntegerUpDown" Value="{Binding Value}" />
        <TextBlock Name="LabelControl" Text="{Binding Label}"/>
    </Grid>
</UserControl>
